@model UI.Web.Models.NewInfo
@{
    ViewBag.Title = "UpdateNews";
}
@using (Html.BeginForm("UpdateNews", "News", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>Cập nhật bài báo</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h4>Tiêu đề bài báo</h4>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.NewsId)
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <h4>Nhà báo</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Journalist, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Journalist, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Image, new { htmlAttributes = new { Style = "display:none" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Image,"Tiêu đề hình ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="#" id="review" style="width:60%;height:400px; margin-bottom:20px" />
                <br />
                <button type="button" id="select" class="btn btn-primary">Chọn ảnh </button>
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <h4>Nội dung bài báo</h4>
            <div class="col-md-10">
                <br />
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <h4>Chọn chủ đề cho bài báo</h4>
            @for (int i = 0; i < Model.Topic.Count; i++)
            {

                @Html.TextBoxFor(m => m.Topic[i].TopicName)
                <input type="checkbox" class="form-check-input checktopic" value=@Model.Topic[i].TopicId.ToString()>
            }
            <input type="text" id="topicstring" name="topicstring" style="display:block" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật bài báo" class="btn btn-default" />
            </div>
        </div>
    </div>

}
<script src="~/DataCK/ckeditor/ckeditor.js"></script>
<script src="~/DataCK/ckfinder/ckfinder.js"></script>
<script>
    $(document).ready(function () {
        $("#review").attr("src", "../../../Uploads/images/" + document.getElementById("Image").value);
        CKEDITOR.replace("Description");
        CKEDITOR.instances["Description"].on('change', function () {
            var obj = CKEDITOR.instances["Description"].getData();
            $("#Description").val(obj);
        });
        $("#select").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#review").attr("src", "../../.." + fileUrl);
                var str = String(fileUrl).replace("/Uploads/images/", "");
                $("#Image").val(str);
            };
            finder.popup();
        });
        $('.checktopic').change(function () {
            var checkedValue = "";
            var inputElements = document.getElementsByClassName('checktopic');
            for (var i = 0; inputElements[i]; ++i) {
                if (inputElements[i].checked) {
                    checkedValue = checkedValue += inputElements[i].value + ",";
                }
            }
            checkedValue = checkedValue.substring(0, checkedValue.length - 1);
            $('#topicstring').val(checkedValue);
        });
        CKEDITOR.instances["Description"].setData(document.getElementById("Description").value);
      
        var str = '@ViewBag.GetTopic';
        $('#topicstring').val(str);
        var arraystr = str.split(",");
        var elementcheck = document.getElementsByClassName('checktopic');
        for (var i = 0; i < arraystr.length; i++) {
            elementcheck[parseInt(arraystr[i]-1)].checked = true;
        }
    });

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

